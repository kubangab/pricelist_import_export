<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_pricelist_form_import_export" model="ir.ui.view">
        <field name="name">product.pricelist.form.import.export</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="before">
                <header>
                    <button name="%(pricelist_import_export.action_pricelist_import_export_wizard)d" 
                            string="Import/Export" 
                            type="action" 
                            class="btn-secondary"/>
                </header>
            </xpath>
        </field>
    </record>

    <!-- Add menu item for easy access -->
    <menuitem id="menu_pricelist_import_export"
              name="Import/Export Pricelist"
              action="pricelist_import_export.action_pricelist_import_export_wizard"
              parent="sale.product_menu_catalog"
              sequence="50"/>
</odoo>